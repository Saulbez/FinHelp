<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" type="text/css" href="/styles/header.css">
    <link rel="stylesheet" type="text/css" href="/styles/products.css">
    <link rel="stylesheet" type="text/css" href="/styles/footer.css">
</head>
<body>
    <%- include('partials/header.ejs') %>

<main class="container-fluid px-md-5">
    
    <!-- Statistics Cards -->
    <div class="row mb-4" id="statsCards">
        <div class="col-md-3 col-6 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-box-seam fs-3 me-3"></i>
                        <div>
                            <h6 class="card-title mb-0">Total Produtos</h6>
                            <h4 id="totalProducts" class="mb-0">-</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-tags fs-3 me-3"></i>
                        <div>
                            <h6 class="card-title mb-0">Marcas</h6>
                            <h4 id="totalBrands" class="mb-0">-</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle fs-3 me-3"></i>
                        <div>
                            <h6 class="card-title mb-0">Estoque Baixo</h6>
                            <h4 id="lowStockCount" class="mb-0">-</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-percent fs-3 me-3"></i>
                        <div>
                            <h6 class="card-title mb-0">Em Promoção</h6>
                            <h4 id="productsOnSale" class="mb-0">-</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex flex-wrap gap-3 mb-4">
        <button class="btn btn-primary rounded-pill px-4 py-2 d-flex align-items-center" 
                data-bs-toggle="modal" 
                data-bs-target="#newProductModal">
            <i class="bi bi-plus-circle me-2"></i>Novo Produto
        </button>
        
        <button class="btn btn-success rounded-pill px-4 py-2 d-flex align-items-center"
                data-bs-toggle="modal" 
                data-bs-target="#brandsModal">
            <i class="bi bi-tags me-2"></i>Gerenciar Marcas
        </button>
        
        <button class="btn btn-warning rounded-pill px-4 py-2 d-flex align-items-center"
                data-bs-toggle="modal" 
                data-bs-target="#newCampaignModal">
            <i class="bi bi-megaphone me-2"></i>Nova Campanha
        </button>
    </div>

    <!-- Filters Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="bi bi-funnel me-2"></i>Filtros e Busca
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <!-- Search -->
                <div class="col-md-4">
                    <div class="position-relative">
                        <input type="text" 
                               id="searchInput" 
                               class="form-control search-input" 
                               placeholder="Pesquisar produto ou marca...">
                        <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3"></i>
                    </div>
                </div>
                
                <!-- Brand Filter -->
                <div class="col-md-2">
                    <select id="brandFilter" class="form-select">
                        <option value="all">Todas as Marcas</option>
                        <% brands.forEach(brand => { %>
                            <option value="<%= brand.id %>"><%= brand.name %></option>
                        <% }) %>
                    </select>
                </div>
                
                <!-- Category Filter -->
                <div class="col-md-2">
                    <select id="categoryFilter" class="form-select">
                        <option value="all">Todas as Categorias</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.category %>"><%= category.category %></option>
                        <% }) %>
                    </select>
                </div>
                
                <!-- Price Range -->
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-text">R$</span>
                        <input type="number" 
                               id="minPrice" 
                               class="form-control" 
                               placeholder="Min" 
                               step="0.01">
                    </div>
                </div>
                
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-text">R$</span>
                        <input type="number" 
                               id="maxPrice" 
                               class="form-control" 
                               placeholder="Max" 
                               step="0.01">
                    </div>
                </div>
            </div>
            
            <div class="row g-3 mt-2">
                <!-- Special Filters -->
                <div class="col-md-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="lowStockFilter">
                        <label class="form-check-label" for="lowStockFilter">
                            Estoque Baixo
                        </label>
                    </div>
                </div>
                
                <div class="col-md-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="onSaleFilter">
                        <label class="form-check-label" for="onSaleFilter">
                            Em Promoção
                        </label>
                    </div>
                </div>
                
                <!-- Sorting -->
                <div class="col-md-2">
                    <select id="sortBy" class="form-select">
                        <option value="name">Nome</option>
                        <option value="current_price">Preço</option>
                        <option value="stock">Estoque</option>
                        <option value="created_at">Data</option>
                        <option value="brand_name">Marca</option>
                    </select>
                </div>
                
                <div class="col-md-2">
                    <select id="sortOrder" class="form-select">
                        <option value="ASC">Crescente</option>
                        <option value="DESC">Decrescente</option>
                    </select>
                </div>
                
                <!-- Clear Filters -->
                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100" id="clearFilters">
                        <i class="bi bi-x-circle me-2"></i>Limpar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4" id="productsContainer">
        <!-- Products will be rendered here -->
    </div>

    <div id="noResults" class="alert alert-info d-none my-4 text-center">
        <i class="bi bi-info-circle me-2"></i>
        Nenhum produto encontrado com os critérios de busca
    </div>

    <!-- Loading Spinner -->
    <div id="loadingSpinner" class="d-flex justify-content-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
    </div>
</main>

<!-- New Product Modal -->
<div class="modal fade" id="newProductModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-box-seam me-2"></i>Novo Produto
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="newProductForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Imagem do Produto</label>
                        <div class="image-upload-container text-center" onclick="document.getElementById('newImageInput').click()">
                            <img src="/images/products/placeholder.png" 
                                 id="newImagePreview" 
                                 class="img-thumbnail mb-2" 
                                 style="height: 150px; width: 150px; object-fit: cover;">
                            <div>
                                <i class="bi bi-camera-fill fs-4 text-muted d-block mb-2"></i>
                                <small class="text-muted">Clique para selecionar uma imagem</small>
                            </div>
                        </div>
                        <input type="file" 
                               id="newImageInput" 
                               name="image" 
                               class="d-none" 
                               accept="image/*">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Nome do Produto *</label>
                        <input type="text" 
                               name="name" 
                               class="form-control" 
                               required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Marca *</label>
                        <select name="brand" class="form-select" required>
                            <option value="">Selecione uma marca</option>
                            <% brands.forEach(brand => { %>
                                <option value="<%= brand.id %>"><%= brand.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Categoria</label>
                        <input type="text" 
                               name="category" 
                               class="form-control" 
                               list="categoryList">
                        <datalist id="categoryList">
                            <% categories.forEach(category => { %>
                                <option value="<%= category.category %>">
                            <% }) %>
                        </datalist>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Preço (R$) *</label>
                                <input type="number" 
                                       name="price" 
                                       class="form-control" 
                                       step="0.01" 
                                       min="0" 
                                       required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Estoque *</label>
                                <input type="number" 
                                       name="stock" 
                                       class="form-control" 
                                       min="0" 
                                       required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Margem de Lucro (%)</label>
                        <input type="number" 
                               name="profit_percentual" 
                               class="form-control" 
                               step="0.01" 
                               min="0">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Criar Produto
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Product Modal -->
<div class="modal fade" id="editProductModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">
                    <i class="bi bi-pencil-square me-2"></i>Editar Produto
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editProductForm" enctype="multipart/form-data">
                <input type="hidden" id="editProductId">
                <input type="hidden" id="existingImage">
                
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Imagem do Produto</label>
                        <div class="image-upload-container text-center" onclick="document.getElementById('editImageInput').click()">
                            <img id="editImagePreview" 
                                 class="img-thumbnail mb-2" 
                                 style="height: 150px; width: 150px; object-fit: cover;">
                            <div>
                                <i class="bi bi-camera-fill fs-4 text-muted d-block mb-2"></i>
                                <small class="text-muted">Clique para alterar a imagem</small>
                            </div>
                        </div>
                        <input type="file" 
                               id="editImageInput" 
                               name="image" 
                               class="d-none" 
                               accept="image/*">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Nome do Produto *</label>
                        <input type="text" 
                               id="editProductName" 
                               name="name" 
                               class="form-control" 
                               required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Marca *</label>
                        <select id="editProductBrand" name="brand" class="form-select" required>
                            <option value="">Selecione uma marca</option>
                            <% brands.forEach(brand => { %>
                                <option value="<%= brand.id %>"><%= brand.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Categoria</label>
                        <input type="text" 
                               id="editProductCategory" 
                               name="category" 
                               class="form-control" 
                               list="editCategoryList">
                        <datalist id="editCategoryList">
                            <% categories.forEach(category => { %>
                                <option value="<%= category.category %>">
                            <% }) %>
                        </datalist>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Preço (R$) *</label>
                                <input type="number" 
                                       id="editProductPrice" 
                                       name="price" 
                                       class="form-control" 
                                       step="0.01" 
                                       min="0" 
                                       required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Estoque *</label>
                                <input type="number" 
                                       id="editProductStock" 
                                       name="stock" 
                                       class="form-control" 
                                       min="0" 
                                       required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Margem de Lucro (%)</label>
                        <input type="number" 
                               id="editProductProfit" 
                               name="profit_percentual" 
                               class="form-control" 
                               step="0.01" 
                               min="0">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle me-2"></i>Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Brands Modal -->
<div class="modal fade" id="brandsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="bi bi-tags me-2"></i>Gerenciar Marcas
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-8">
                        <input type="text" id="newBrandName" class="form-control" placeholder="Nome da nova marca">
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-success w-100" onclick="addBrand()">
                            <i class="bi bi-plus-circle me-2"></i>Adicionar
                        </button>
                    </div>
                </div>
                <div id="brandsList" class="list-group">
                    <!-- Brands will be loaded here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Campaign Modal -->
<div class="modal fade" id="newCampaignModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">
                    <i class="bi bi-megaphone me-2"></i>Nova Campanha Promocional
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/campanhas" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Produto *</label>
                        <select name="product_id" class="form-select" required>
                            <option value="">Selecione um produto</option>
                            <% products.forEach(product => { %>
                                <option value="<%= product.id %>"><%= product.name %> - <%= product.brand_name %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Data Início *</label>
                                <input type="date" name="start_date" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Data Fim *</label>
                                <input type="date" name="end_date" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Preço Promocional (R$) *</label>
                        <input type="number" name="promo_price" class="form-control" step="0.01" min="0" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Margem de Lucro (%)</label>
                        <input type="number" name="profit_percentual" class="form-control" step="0.01" min="0">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle me-2"></i>Criar Campanha
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs') %>
    <script src="JS/index.js" type="text/javascript" defer="defer"></script>
    <script src="JS/products.js" type="text/javascript" defer="defer"></script>
</body>
</html>