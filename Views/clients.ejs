<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes - Sistema de Gest√£o</title>
    
    <link rel="stylesheet" href="Styles/header.css">
    <link rel="stylesheet" href="Styles/client.css">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
    <!-- Header -->
    <%- include('partials/header.ejs') %>
    
    <!-- Loading Spinner -->
    <div id="loadingSpinner" class="d-flex justify-content-center align-items-center" style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 9999;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
    </div>

    <main>
        <div class="container">
            <!-- Page Header -->
            <div class="page-header">
                <div class="page-header-content">
                    <div>
                        <h1 class="page-title">Clientes</h1>
                        <p class="page-subtitle">Gerencie seus clientes e acompanhe o relacionamento comercial</p>
                    </div>
                    <button class="btn-primary-custom" data-bs-toggle="modal" data-bs-target="#addClientModal">
                        <i class="bi bi-plus-circle"></i> Novo Cliente
                    </button>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">Total de Clientes</div>
                        <div class="stat-icon">üë•</div>
                    </div>
                    <div class="stat-value" id="totalClients">0</div>
                    <div class="stat-change">+<%= clientsMonth %> este m√™s</div>
                </div>
                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">Clientes Ativos</div>
                        <div class="stat-icon">‚úÖ</div>
                    </div>
                    <div class="stat-value" id="activeClients">0</div>
                    <div class="stat-change">Com compras</div>
                </div>
                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">Clientes em D√©bito</div>
                        <div class="stat-icon">‚ö†Ô∏è</div>
                    </div>
                    <div class="stat-value" id="clientsWithDebt">0</div>
                    <div class="stat-change">Pendentes</div>
                </div>
                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">Valor Total em D√©bito</div>
                        <div class="stat-icon">üí∞</div>
                    </div>
                    <div class="stat-value" id="totalDebt">R$ 0,00</div>
                    <div class="stat-change">A receber</div>
                </div>
            </div>

            <!-- Search and Filter Container -->
            <div class="search-container">
                <div class="row g-3">
                    <div class="col-md-8">
                        <div class="search-input">
                            <i class="bi bi-search"></i>
                            <input type="text" class="form-control" placeholder="Pesquisar clientes por nome, telefone ou produtos..." id="searchInput">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select class="form-select" id="filterSelect">
                            <option value="all">Todos os Clientes</option>
                            <option value="with-debt">Com D√©bito</option>
                            <option value="no-debt">Sem D√©bito</option>
                            <option value="active">Clientes Ativos</option>
                            <option value="inactive">Sem Compras</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Clients Table -->
            <div class="table-container">
                <div class="table-header">
                    <h3 class="table-title">Lista de Clientes</h3>
                    <div class="table-actions">
                        <button class="btn btn-outline-primary btn-sm" onclick="refreshClients()">
                            <i class="bi bi-arrow-clockwise"></i> Atualizar
                        </button>
                        <button class="btn btn-outline-secondary btn-sm" onclick="exportClients()">
                            <i class="bi bi-download"></i> Exportar
                        </button>
                    </div>
                </div>
                <div class="table-wrapper">
                    <table class="clients-table">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAll" class="form-check-input">
                                </th>
                                <th>Cliente</th>
                                <th>Telefone</th>
                                <th>√öltima Compra</th>
                                <th>D√©bito</th>
                                <th>A√ß√µes</th>
                            </tr>
                        </thead>
                        <tbody id="clientsTableBody">
                            <!-- Dynamic content will be loaded here -->
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Carregando clientes...</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            <div class="pagination-container" id="paginationContainer" style="display: none;">
                <nav>
                    <ul class="pagination justify-content-center">
                        <!-- Pagination will be generated dynamically -->
                    </ul>
                </nav>
            </div>
        </div>
    </main>

    <!-- Add Client Modal -->
    <div class="modal fade" id="addClientModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-person-plus"></i> Novo Cliente
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="addClientForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Nome Completo <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="name" required>
                            <div class="invalid-feedback">
                                Por favor, informe o nome do cliente.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Telefone</label>
                            <input type="tel" class="form-control" name="phone" placeholder="(85) 9 9999-9999">
                            <div class="form-text">Formato: (85) 9 9999-9999</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">D√©bito Inicial (R$)</label>
                            <input type="number" class="form-control" name="debt" step="0.01" min="0" value="0">
                            <div class="form-text">Deixe 0 se n√£o houver d√©bito inicial</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Salvar Cliente
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Client Modal -->
    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-pencil"></i> Editar Cliente
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <div class="modal-body">
                        <input type="hidden" id="editClientId">
                        <div class="mb-3">
                            <label class="form-label">Nome Completo <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editName" required>
                            <div class="invalid-feedback">
                                Por favor, informe o nome do cliente.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Telefone</label>
                            <input type="tel" class="form-control" id="editPhone" placeholder="(85) 9 9999-9999">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">D√©bito (R$)</label>
                            <input type="number" class="form-control" id="editDebt" step="0.01">
                            <div class="form-text">Valor atual do d√©bito do cliente</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Observa√ß√µes</label>
                            <textarea class="form-control" id="editNotes" rows="3" placeholder="Observa√ß√µes sobre o cliente..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Salvar Altera√ß√µes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- History Modal -->
    <div class="modal fade" id="historyModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-clock-history"></i> Hist√≥rico do Cliente
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <h6 id="historyClientName">Nome do Cliente</h6>
                        <p class="text-muted" id="historyClientInfo">Informa√ß√µes do cliente</p>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Data</th>
                                    <th>Total</th>
                                    <th>Produtos</th>
                                    <th>Parcelas</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody id="historyContent">
                                <!-- Content will be populated by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                    <div id="historyEmpty" class="text-center py-4" style="display: none;">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <p class="text-muted mt-2">Nenhum hist√≥rico de compras encontrado</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" onclick="printHistory()">
                        <i class="bi bi-printer"></i> Imprimir Hist√≥rico
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Actions Modal -->
    <div class="modal fade" id="bulkActionsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-list-check"></i> A√ß√µes em Massa
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Selecione uma a√ß√£o para aplicar aos <span id="selectedCount">0</span> clientes selecionados:</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary" onclick="bulkExport()">
                            <i class="bi bi-download"></i> Exportar Selecionados
                        </button>
                        <button class="btn btn-outline-warning" onclick="bulkUpdateDebt()">
                            <i class="bi bi-cash"></i> Atualizar D√©bito
                        </button>
                        <button class="btn btn-outline-danger" onclick="bulkDelete()">
                            <i class="bi bi-trash"></i> Excluir Selecionados
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script src="JS/client.js"></script>
    
    <!-- Additional Scripts -->
    <script>

        // Phone number formatting
        document.addEventListener('input', function(e) {
            if (e.target.type === 'tel') {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length <= 11) {
                    value = value.replace(/(\d{2})(\d{1})(\d{4})(\d{4})/, '($1) $2 $3-$4');
                    e.target.value = value;
                }
            }
        });

        // Export clients function
        function exportClients() {
            // This would implement CSV/Excel export functionality
            showNotification('Funcionalidade de exporta√ß√£o em desenvolvimento', 'info');
        }

        // Print history function
        function printHistory() {
            const historyContent = document.getElementById('historyContent').innerHTML;
            const clientName = document.getElementById('historyClientName').textContent;
            
            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <html>
                    <head>
                        <title>Hist√≥rico - ${clientName}</title>
                        <style>
                            body { font-family: Arial, sans-serif; margin: 20px; }
                            table { width: 100%; border-collapse: collapse; }
                            th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
                            th { background-color: #f2f2f2; }
                        </style>
                    </head>
                    <body>
                        <h2>Hist√≥rico de Compras - ${clientName}</h2>
                        <table>
                            <thead>
                                <tr>
                                    <th>Data</th>
                                    <th>Valor</th>
                                    <th>Produtos</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${historyContent}
                            </tbody>
                        </table>
                    </body>
                </html>
            `);
            printWindow.document.close();
            printWindow.print();
        }

        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
</body>
</html>