<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <link rel="stylesheet" type="text/css" href="/styles/header.css">
    <link rel="stylesheet" type="text/css" href="/styles/sales.css">
    <link rel="stylesheet" type="text/css" href="/styles/footer.css">
    
    <script src="JS/index.js" type="text/javascript" defer="defer"></script>
    <script src="JS/sales.js" type="text/javascript"></script>
    <script src="/JS/profitUpdater.js" type="text/javascript" defer></script>
    <script src="JS/notifications.js" type="text/javascript" ></script>
</head>
<body>
    <%- include('partials/header.ejs') %>

    <main class="container my-4 px-md-5">
        <!-- Botão Nova Venda -->
        <div class="container my-4 px-md-5">
            <!-- Notification Bar -->
            <div class="notification-bar alert-info">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-bell me-2"></i>
                        <span id="notificationText">Carregando notificações...</span>
                    </div>
                    <button class="btn btn-sm btn-light" onclick="dismissNotification()" title="Dispensar notificação">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            </div>

            <!-- Quick Actions Panel -->
            <div class="quick-actions">
                <h4 class="mb-3">
                    <i class="bi bi-lightning-charge me-2"></i>
                    Ações Rápidas
                </h4>
                <div class="row g-3">
                    <div class="col-md-2">
                        <button class="btn quick-action-btn w-100" onclick="showQuickSale()">
                            <i class="bi bi-cart-plus d-block mb-1"></i>
                            Venda Rápida
                        </button>
                    </div>
                    <div class="col-md-2">
                        <button class="btn quick-action-btn w-100" onclick="showBulkActions()">
                            <i class="bi bi-check2-square d-block mb-1"></i>
                            Ações em Lote
                        </button>
                    </div>
                    <div class="col-md-2">
                        <button class="btn quick-action-btn w-100" onclick="showCommissionCalc()">
                            <i class="bi bi-calculator d-block mb-1"></i>
                            Comissões
                        </button>
                    </div>
                    <div class="col-md-2">
                        <button class="btn quick-action-btn w-100" onclick="showCustomerInsights()">
                            <i class="bi bi-person-lines-fill d-block mb-1"></i>
                            Insights
                        </button>
                    </div>
                    <div class="col-md-2">
                        <button class="btn quick-action-btn w-100" onclick="showReports()">
                            <i class="bi bi-graph-up d-block mb-1"></i>
                            Relatórios
                        </button>
                    </div>
                    <div class="col-md-2">
                        <button class="btn quick-action-btn w-100" onclick="showExportOptions()">
                            <i class="bi bi-download d-block mb-1"></i>
                            Exportar
                        </button>
                    </div>
                    <div class="col-md-2">
                        <button class="btn quick-action-btn w-100" onclick="showPaymentMethodsModal()">
                            <i class="bi bi-credit-card d-block mb-1"></i>
                            Métodos de Pagamento
                        </button>
                    </div>
                </div>
            </div>

            <!-- Sales Analytics -->
            <div class="sales-analytics">
                <h4 class="mb-3">
                    <i class="bi bi-graph-up me-2"></i>
                    Analytics de Vendas
                    <button class="btn btn-sm btn-outline-primary float-end" onclick="refreshAnalytics()">
                        <i class="bi bi-arrow-clockwise"></i>
                    </button>
                </h4>
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="metric-card">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Vendas Hoje</h6>
                                    <div class="animated-counter" id="salesToday">0</div>
                                </div>
                                <i class="bi bi-cart text-success" style="font-size: 1.5rem;"></i>
                            </div>
                            <small class="text-light" data-metric="sales-change">Carregando...</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="metric-card">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Receita Hoje</h6>
                                    <div class="animated-counter" data-metric="revenue-today">R$ 0,00</div>
                                </div>
                                <i class="bi bi-currency-dollar text-success" style="font-size: 1.5rem;"></i>
                            </div>
                            <small class="text-light" data-metric="revenue-change">Carregando...</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="metric-card">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Conversão</h6>
                                    <div class="animated-counter" data-metric="conversion-rate">0%</div>
                                </div>
                                <i class="bi bi-target text-warning" style="font-size: 1.5rem;"></i>
                            </div>
                            <small class="text-light" data-metric="conversion-change">Carregando...</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="metric-card">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Clientes Ativos</h6>
                                    <div class="animated-counter" data-metric="active-clients">0</div>
                                </div>
                                <i class="bi bi-people text-info" style="font-size: 1.5rem;"></i>
                            </div>
                            <small class="text-light" data-metric="client-growth">Carregando...</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Suggestions - now with real data -->
            <div class="product-suggestion">
                <h5 class="mb-3">
                    <i class="bi bi-lightbulb me-2"></i>
                    Insights Inteligentes
                </h5>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6>Produtos em Alta</h6>
                                <div data-section="top-products">Carregando...</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6>Tendência de Receita</h6>
                                <div data-section="revenue-trend">Carregando...</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6>Métodos de Pagamento</h6>
                                <div data-section="payment-methods">Carregando...</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Enhanced Filters -->
            <div class="table-actions">
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <div class="search-enhance">
                            <i class="bi bi-search search-icon"></i>
                            <input type="text" class="form-control" id="salesSearchInput" placeholder="Buscar por ID, cliente, produto...">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" id="dateRangeFilter">
                            <option value="">Todas as datas</option>
                            <option value="today">Hoje</option>
                            <option value="week">Esta Semana</option>
                            <option value="month">Este Mês</option>
                            <option value="custom">Personalizado</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" id="statusFilter">
                            <option value="">Todos Status</option>
                            <option value="paid">Pagos</option>
                            <option value="pending">Pendentes</option>
                            <option value="partial">Parciais</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-outline-secondary w-100" onclick="showAdvancedFiltersModal()">
                            <i class="bi bi-funnel me-1"></i>Filtros
                        </button>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-success w-100" onclick="showNewSaleForm()">
                            <i class="bi bi-plus-circle me-1"></i>Nova Venda
                        </button>
                    </div>
                </div>
                
                <!-- Custom Date Range (hidden by default) -->
                <div class="row g-3 mb-3 d-none" id="customDateRange">
                    <div class="col-md-3">
                        <label class="form-label">Data Início</label>
                        <input type="date" class="form-control" id="startDateFilter">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Data Fim</label>
                        <input type="date" class="form-control" id="endDateFilter">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-primary w-100" onclick="applyCustomDateFilter()">Aplicar</button>
                    </div>
                </div>
                
                <!-- Current Filters Display -->
                <div class="mb-3" id="activeFiltersContainer">
                    <div class="d-flex align-items-center flex-wrap">
                        <span class="me-2 text-muted">Filtros ativos:</span>
                        <div id="currentFiltersDisplay">
                            <span class="text-muted">Nenhum filtro aplicado</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Advanced Filters Modal -->
            <div class="modal fade" id="advancedFiltersModal" tabindex="-1">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Filtros Avançados</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Cliente</label>
                                    <select class="form-select" id="advancedClientFilter">
                                        <option value="">Todos os clientes</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Método de Pagamento</label>
                                    <select class="form-select" id="advancedPaymentFilter">
                                        <option value="">Todos os métodos</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Valor Mínimo</label>
                                    <input type="number" class="form-control" id="minValueFilter" placeholder="R$ 0,00" step="0.01">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Valor Máximo</label>
                                    <input type="number" class="form-control" id="maxValueFilter" placeholder="R$ 1000,00" step="0.01">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Produto</label>
                                    <select class="form-select" id="advancedProductFilter">
                                        <option value="">Todos os produtos</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Status de Parcelas</label>
                                    <select class="form-select" id="installmentStatusFilter">
                                        <option value="">Todos</option>
                                        <option value="current">Em dia</option>
                                        <option value="overdue">Em atraso</option>
                                        <option value="paid">Quitadas</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" onclick="clearAllFilters()">Limpar Filtros</button>
                            <button type="button" class="btn btn-primary" onclick="applyAdvancedFilters()">Aplicar Filtros</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sales Statistics -->
            <div id="salesStatsContainer" class="mb-4">
                <!-- Stats will be populated dynamically -->
            </div>

            <!-- Bulk Actions -->
            <div class="bulk-actions d-none" id="bulkActionsPanel">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span id="selectedCount">0</span> vendas selecionadas
                    </div>
                    <div>
                        <button class="btn btn-sm btn-success me-2" onclick="bulkMarkPaid()">
                            <i class="bi bi-check-circle me-1"></i>Marcar como Pago
                        </button>
                        <button class="btn btn-sm btn-warning me-2" onclick="bulkSendReminder()">
                            <i class="bi bi-bell me-1"></i>Enviar Lembrete
                        </button>
                        <button class="btn btn-sm btn-info me-2" onclick="exportFilteredSales()">
                            <i class="bi bi-download me-1"></i>Exportar Selecionadas
                        </button>
                        <button class="btn btn-sm btn-danger" onclick="bulkDelete()">
                            <i class="bi bi-trash me-1"></i>Excluir
                        </button>
                    </div>
                </div>
            </div>

            <!-- Enhanced Sales Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-table me-2"></i>Todas as Vendas
                    </h5>
                    <div class="d-flex align-items-center">
                        <button class="btn btn-sm btn-light me-2" onclick="toggleTableDensity()">
                            <i class="bi bi-list me-1"></i>Densidade
                        </button>
                        <button class="btn btn-sm btn-light" onclick="exportFilteredSales()">
                            <i class="bi bi-download"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="salesTable">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 40px;">
                                        <input type="checkbox" class="form-check-input" id="selectAllSales">
                                    </th>
                                    <th data-sort="sale_date" class="sortable-header" onclick="sortSalesTable('sale_date')">
                                        Venda <i class="bi bi-arrow-up-down"></i>
                                    </th>
                                    <th data-sort="client_name" class="sortable-header" onclick="sortSalesTable('client_name')">
                                        Cliente <i class="bi bi-arrow-up-down"></i>
                                    </th>
                                    <th>Produtos</th>
                                    <th>Pagamento</th>
                                    <th data-sort="total" class="sortable-header" onclick="sortSalesTable('total')">
                                        Total <i class="bi bi-arrow-up-down"></i>
                                    </th>
                                    <th data-sort="payment_status" class="sortable-header" onclick="sortSalesTable('payment_status')">
                                        Status <i class="bi bi-arrow-up-down"></i>
                                    </th>
                                    <th style="width: 140px;">Ações</th>
                                </tr>
                            </thead>
                            <tbody id="salesTableBody">
                                <!-- Table content will be populated dynamically -->
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <div class="d-flex justify-content-between align-items-center p-3 border-top">
                        <div>
                            <small class="text-muted" id="paginationStats">Carregando...</small>
                        </div>
                        <nav>
                            <ul class="pagination pagination-sm mb-0" id="salesPagination">
                                <!-- Pagination will be populated dynamically -->
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

            <!-- Floating Summary Panel -->
            <div class="floating-summary d-none" id="floatingSummary">
                <h6 class="mb-3">
                    <i class="bi bi-graph-up me-2"></i>
                    Resumo da Sessão
                </h6>
                <div class="row text-center">
                    <div class="col-4">
                        <div class="h5 text-primary mb-0" id="sessionSales">3</div>
                        <small class="text-muted">Vendas</small>
                    </div>
                    <div class="col-4">
                        <div class="h5 text-success mb-0" id="sessionRevenue">R$ 450</div>
                        <small class="text-muted">Receita</small>
                    </div>
                    <div class="col-4">
                        <div class="h5 text-info mb-0" id="sessionCommission">R$ 45</div>
                        <small class="text-muted">Comissão</small>
                    </div>
                </div>
                <button class="btn btn-sm btn-outline-secondary w-100 mt-3" onclick="toggleFloatingSummary()">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        </div>

        <!-- Enhanced New Sale Modal -->
        <div class="modal fade" id="newSaleModal" tabindex="-1" aria-labelledby="newSaleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="newSaleModalLabel">
                            <i class="bi bi-cart-plus me-2"></i>Nova Venda
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <!-- Cliente Selection -->
                            <div class="col-md-12 mb-3">
                                <label for="customerSelect" class="form-label">Cliente</label>
                                <select class="form-select" id="customerSelect" required>
                                    <option value="">Selecione um cliente...</option>
                                </select>
                            </div>

                            <!-- Products Grid -->
                            <div class="col-md-8">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">Produtos</h6>
                                            <div class="input-group" style="width: 300px;">
                                                <input type="text" class="form-control" id="productSearch" placeholder="Buscar produtos...">
                                                <span class="input-group-text bg-white">
                                                    <i class="bi bi-search"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row" id="productGrid">
                                            <!-- Products will be dynamically loaded here -->
                                        </div>
                                    </div>
                                    <!-- Remove this erroneous section that's currently there: -->
                                    <div class="d-flex justify-content-between align-items-center p-3 border-top">
                                        <div>
                                            <small class="text-muted" id="paginationStats">Carregando...</small>
                                        </div>
                                        <nav>
                                            <ul class="pagination pagination-sm mb-0" id="salesPagination">
                                                <!-- Pagination will be populated dynamically -->
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>

                            <!-- Cart Summary -->
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Carrinho</h6>
                                    </div>
                                    <div class="card-body">
                                        <div id="cartSummary">
                                            <!-- Cart items will be dynamically loaded here -->
                                        </div>
                                        <hr>
                                        <div class="mt-3">
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Subtotal:</span>
                                                <span id="subtotalAmount">R$ 0,00</span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Juros:</span>
                                                <span id="interestAmount">R$ 0,00</span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Total:</span>
                                                <span id="totalAmount" class="fw-bold">R$ 0,00</span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Pago:</span>
                                                <span id="paidAmount">R$ 0,00</span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2" id="remainingRow">
                                                <span>Restante:</span>
                                                <span id="remainingAmount">R$ 0,00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Payment Methods -->
                                <div class="card mt-3">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">Formas de Pagamento</h6>
                                        <button class="btn btn-sm btn-outline-primary" id="addPaymentBtn" type="button">
                                            <i class="bi bi-plus"></i> Adicionar
                                        </button>
                                    </div>
                                    <div class="card-body">
                                        <!-- Payment Method 1 -->
                                        <div id="payment1" class="payment-method-container mb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <h6>Pagamento 1</h6>
                                            </div>
                                            <select class="form-select mb-2 payment-method" data-payment="1" required>
                                                <option value="">Selecione...</option>
                                            </select>
                                            <div class="input-group mb-2">
                                                <span class="input-group-text">R$</span>
                                                <input type="number" class="form-control payment-amount" data-payment="1" min="0" step="0.01" required>
                                            </div>
                                            <div id="installments1" class="installments-section d-none">
                                                <div class="row g-2">
                                                    <div class="col-6">
                                                        <label class="form-label">Parcelas</label>
                                                        <select class="form-select payment-installments" data-payment="1">
                                                            <option value="1">1x</option>
                                                            <option value="2">2x</option>
                                                            <option value="3">3x</option>
                                                            <option value="4">4x</option>
                                                            <option value="5">5x</option>
                                                            <option value="6">6x</option>
                                                            <option value="7">7x</option>
                                                            <option value="8">8x</option>
                                                            <option value="9">9x</option>
                                                            <option value="10">10x</option>
                                                            <option value="11">11x</option>
                                                            <option value="12">12x</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-6">
                                                        <label class="form-label">Juros %</label>
                                                        <input type="number" class="form-control payment-interest" data-payment="1" value="0" min="0" step="0.1">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Payment Method 2 -->
                                        <div id="payment2" class="payment-method-container mb-3 d-none">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <h6>Pagamento 2</h6>
                                                <button class="btn btn-sm btn-outline-danger" onclick="removePaymentMethod(2)" type="button">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <select class="form-select mb-2 payment-method" data-payment="2">
                                                <option value="">Selecione...</option>
                                            </select>
                                            <div class="input-group mb-2">
                                                <span class="input-group-text">R$</span>
                                                <input type="number" class="form-control payment-amount" data-payment="2" min="0" step="0.01">
                                            </div>
                                            <div id="installments2" class="installments-section d-none">
                                                <div class="row g-2">
                                                    <div class="col-6">
                                                        <label class="form-label">Parcelas</label>
                                                        <select class="form-select payment-installments" data-payment="2">
                                                            <option value="1">1x</option>
                                                            <option value="2">2x</option>
                                                            <option value="3">3x</option>
                                                            <option value="4">4x</option>
                                                            <option value="5">5x</option>
                                                            <option value="6">6x</option>
                                                            <option value="7">7x</option>
                                                            <option value="8">8x</option>
                                                            <option value="9">9x</option>
                                                            <option value="10">10x</option>
                                                            <option value="11">11x</option>
                                                            <option value="12">12x</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-6">
                                                        <label class="form-label">Juros %</label>
                                                        <input type="number" class="form-control payment-interest" data-payment="2" value="0" min="0" step="0.1">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" onclick="submitSale()">
                            <i class="bi bi-check-circle me-1"></i>Finalizar Venda
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="bulk-actions d-none" id="bulkActionsPanel">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <span id="selectedCount">0</span> vendas selecionadas
            </div>
            <div>
                <button class="btn btn-sm btn-success me-2" onclick="bulkMarkPaid()">
                    <i class="bi bi-check-circle me-1"></i>Marcar como Pago
                </button>
                <button class="btn btn-sm btn-danger" onclick="bulkDelete()">
                    <i class="bi bi-trash me-1"></i>Excluir Selecionadas
                </button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="paymentMethodsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-credit-card me-2"></i>Métodos de Pagamento
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <input type="text" id="newPaymentMethodName" class="form-control" 
                                placeholder="Nome do método de pagamento">
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-primary w-100" onclick="addPaymentMethod()">
                                <i class="bi bi-plus-circle me-2"></i>Adicionar
                            </button>
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="requiresInstallments">
                        <label class="form-check-label" for="requiresInstallments">
                            Permite parcelamento
                        </label>
                    </div>
                    <div id="paymentMethodsList" class="list-group">
                        <!-- Payment methods will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
      
      <%- include('partials/footer.ejs') %>
      <script>
        
        document.addEventListener('DOMContentLoaded', function() {
            const addPaymentBtn = document.getElementById('addPaymentBtn');
            if (addPaymentBtn) {
                addPaymentBtn.setAttribute('onclick', 'window.addPaymentMethod()');
            }
        });
      </script>
